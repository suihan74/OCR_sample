<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/top_ignored_area"
        android:visibility="gone"
        android:background="@color/ignoredAreaBackground"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:paddingTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/top_line"
            android:background="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_ignored_area"
        android:visibility="gone"
        android:background="@color/ignoredAreaBackground"
        android:layout_gravity="bottom"
        android:paddingBottom="400dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/bottom_line"
            android:background="@android:color/holo_green_light"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detected_text_view"
        android:textColor="@android:color/holo_green_light"
        android:background="#aa000000"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.suihan74.phopype.OverlayLayer
        android:id="@+id/overlay_layer"
        app:foregroundColor="@android:color/holo_green_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/detect_button"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="36dp"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
